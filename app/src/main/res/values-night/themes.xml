    <!--        DARK MODE COLORS-->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#FFF8EC</item>
        <item name="colorPrimaryVariant">#B2B2B2</item>
        <item name="colorOnPrimary">#22201F</item>

        <item name="colorSecondary">#1C1C1C</item>
        <item name="colorSecondaryVariant">#282828</item>
        <item name="colorOnSecondary">#EBDBB2</item>

        <item name="colorPreferenceBack">#2F2F2F</item>
        <item name="colorPreferenceFore">#EBDBB2</item>
        <item name="colorPreferenceLine">#8ec07c</item>

        <item name="navHeadBack">#1E3E76</item>

        <item name="android:statusBarColor" tools:targetApi="l">#22201F</item>
    </style>

    <style name="Theme.SplashScreen.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>

    </style>
    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>