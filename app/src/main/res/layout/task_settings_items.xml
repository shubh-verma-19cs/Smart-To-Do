<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F6F6"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginBottom="0dp"
    android:padding="10dp"
    android:id="@+id/taskSettingsLayout">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:id="@+id/taskSettingImg"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskSettingName"
            android:text="taskSettingName"
            android:textStyle="bold"
            android:textColor="@color/gradient_3"
            android:textSize="15dp"
            android:paddingLeft="20dp"/>
        <TextView
            android:id="@+id/taskSettingDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gradient_end"
            android:textSize="12dp"
            android:paddingLeft="20dp"
            android:text="taskSettingDesc"/>

    </LinearLayout>

</LinearLayout>